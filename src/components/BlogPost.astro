---
const { url, title, pubDate, description, tags } = Astro.props;
---

<li class="post-item">
    <a href={url}>
        <h2>{title}</h2>
    </a>
    <p class="post-date">{new Date(pubDate).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    })}</p>
    <p class="post-description">{description}</p>
    <div class="post-tags">
        {tags.map((tag) => (
            <span class="tag">{tag}</span>
        ))}
    </div>
</li>

<style>
    .post-item {
        margin-bottom: 2rem;
        border-bottom: 1px solid #ccc;
        padding-bottom: 1rem;
    }
    .post-item:last-child {
        border-bottom: none;
    }
    .post-date {
        color: #666;
        font-style: italic;
    }
    .post-description {
        margin-top: 0.5rem;
    }
    .post-tags {
        margin-top: 0.5rem;
    }
    .tag {
        background-color: #f1f1f1;
        padding: 0.2rem 0.5rem;
        border-radius: 0.3rem;
        font-size: 0.8rem;
        margin-right: 0.5rem;
    }
</style>